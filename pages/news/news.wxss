page{
  height: 100%;
}
.box{
  width: 100%;
  height: 100%;
  background:gray;
  text-align: center;
}
.game{
  display: flex;  
  width: 100%;
  height: 200rpx;
}
.computer{
  margin-top: 20rpx;
  height: 180rpx;
  width: 180rpx;
  margin-left:80rpx;
}
.result{
    color: orangered; 
    flex:1;
    font-size: 30rpx;
    margin-top:75rpx; 
}
.player{
  margin-top: 20rpx;
  height: 180rpx;
  width: 180rpx;
  margin-right:80rpx;
}
.game_interface{
    position: relative;
    margin:40rpx; 
    height: 800rpx;
    background: white;
    text-align: center;
}
.circle {
  position: absolute;
  display: block;
  border-radius: 50%;
  height: 20rpx;
  width: 20rpx;
  margin-left: 18rpx;
}
.text{
  position:relative;
  top: 20px;
  left: 7px;
  font-weight: bold;
}
.choose{
    display: flex;
    margin-top: 55rpx;
}

.choose_one{  
    flex: 1;
    height: 140rpx;
    width: 140rpx; 
    border:1px solid white;
}  

.choose_i{
    height: 160rpx;
    width: 160rpx;    
}
.winNum{
 position: relative;
 top: 50rpx;
 font-weight:bold;
}
.againBtn{
    margin-top:130rpx; 
    border: 1px solid black;
    background:yellow;
}
