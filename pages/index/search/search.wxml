<view class="search">
  <view class="searchBg">
    <view>
      <image src="/image/icon/search.png" style="width:20px;height:21px;"></image>
    </view>
    <view>
      <input type="text" placeholder="搜索商品" />
    </view>
  </view>
  <view class="btn" bindtap="resetSearch">取消</view>
</view>
<view class="hr"></view>
<view class="hotSearch">
    <view class="title">
      <view class="left">热门搜索</view>
      <view class="right" bindtap="change">换一批</view>
    </view>
    <view class="tips" wx:for="{{tips}}">
      <view class="tip">{{item}}</view>
    </view>
  </view>