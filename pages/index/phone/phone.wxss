.seckill{
  display: flex;
  flex-direction: row;
}
.stage{
  width: 25%;
  text-align: center;
  font-size: 32rpx;
  border: .5px solid white;
  background: #DDD;
}
.active {                       
  transform: scale(1.05);
  transform: all 2s;
  font-weight: bold;
  color: red;
 
  background: white;
}
.hr{
  background: #E8E8ED;
  height: 20rpx;
  /* margin-top: 10px; */
}
.buyBtns{
  position: fixed;
  bottom: 0px;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.shoppingcart{
  width:16%;
  background-color: #ffffff;
  text-align: center;
}
.intocart{
  width:100%;
  background-color: #FF9600;
  color: #ffffff;
  text-align: center;
  line-height: 80rpx;

}
.buy{
  width:84%;
  background-color: #E3393C;
  color: #ffffff;
  text-align: center;
  line-height: 80rpx;
}
.num{
  z-index: 999;
  width:32rpx;
  height: 32rpx;
  border-radius: 50%;
  background-color: #E3393C;
  position: absolute;
  left: 70rpx;
  bottom:54rpx;
  font-size: 12px;
  color: #ffffff;
}