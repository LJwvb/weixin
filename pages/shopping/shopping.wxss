

.item{
    display: flex;
    flex-direction: row;
    padding: 20rpx;
    align-items: center;
}
.order{
    width:100%;
    height: 154rpx;
}
.title{
    font-size: 30rpx;
}
.desc{
    display: flex;
    flex-direction: row;
    font-size: 26rpx;
    color: #cccccc;
}
.desc view{
    margin-right: 10px;
}
.priceInfo{
    display: flex;
    flex-direction: row;
    margin-top:20rpx;
}
.price{
    width: 65%;
    font-size: 30rpx;
    color: #ff0000;
    text-align: left;
}
.minus,.add{
    border: 1px solid #cccccc;
    width: 50rpx;
    text-align: center;
}
.count{
    border-top: 2px solid #cccccc;
    border-bottom: 2px solid #cccccc;
    width: 80rpx;
    text-align: center;
}

.totalInfo{
    display: flex;
    flex-direction: row;
    height: 120px;
}
.all{
    align-items: center;
    padding-left: 20rpx;
    width: 20%;
    font-size: 24rpx;
    margin-top: 20rpx;
}
.remove{
  margin-top: -79rpx;
  margin-left: 94rpx;
  color: white;
  font-weight: bold;
  font-size: 35rpx;
  background: red;
  text-align: center;
}
.amount{
    width:50%;
    font-size: 26rpx;
    text-align: right;
}
.total{
    font-size: 32rpx;
    color: #ff0000;
    font-weight: bold;
    margin-bottom: 20rpx;
}
.opr{
    position: absolute;
    right: 0px;
    width: 184rpx;
    font-size: 30rpx;
    font-weight: bold;
    background-color: #E4393C;
    height: 120rpx;
    text-align: center;
    line-height: 120rpx;
    color:#ffffff;
}
.icon{
  margin-right: 20rpx;
}
.if{
  text-align: center;
  opacity: 0.56;
}